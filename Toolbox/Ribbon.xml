<?xml version="1.0" encoding="UTF-8"?>
<customUI onLoad="Ribbon1_Load" xmlns="http://schemas.microsoft.com/office/2009/07/customui">
    <ribbon>
        <tabs>
            <tab idMso="TabAddIns" label="Toolbox">
                <group id="grpUnits" label="Units">
					<button id="btnFixQuantities" imageMso="AutoFormatWizard" keytip="Q" screentip="Fix Quantities" supertip="Scans the document and corrects quantities with attached units to conform to NIST Special Publication 811. E.g., will convert &quot;1+/-0.01mA&quot; to &quot;1.00 mA ± 0.01 mA&quot;" label="Fix Quantities" onAction="FixQuantities" />
					<toggleButton id="tglTogglePgBrk" imageMso="PageBreakInsertOrRemove" screentip="Toggle Page Break Before" supertip="Toggles the paragraph style &quot;Page break before&quot;. This can be used to enforce page breaks within tables or in other places where a hard page break (Ctrl+Enter) is not desirable." onAction="TogglePageBreakBefore" getPressed="GetPageBreakBefore" label="Toggle Page Break Before" />
                </group>
            </tab>
        </tabs>
    </ribbon>
    <contextMenus>
        <contextMenu idMso="ContextMenuText">
            <menuSeparator id="ToolboxText"/>
            <button id="mnuFixQuantityText" label="Fix Quantity" onAction="FixSingleQuantity" getEnabled="IsUnit" />
			<toggleButton id="mnuTogglePgBrkText" label="Toggle Page Break" getPressed="GetPageBreakBefore" onAction="TogglePageBreakBefore" />
        </contextMenu>
        <contextMenu idMso="ContextMenuEndnote">
            <menuSeparator id="ToolboxEndnote"/>
            <button id="mnuFixQuantityEndnote" label="Fix Quantity" onAction="FixSingleQuantity" getEnabled="IsUnit" />
		</contextMenu>
        <contextMenu idMso="ContextMenuFootnote">
            <menuSeparator id="ToolboxFootnote"/>
            <button id="mnuFixQuantityFootnote" label="Fix Quantity" onAction="FixSingleQuantity" getEnabled="IsUnit" />
		</contextMenu>
        <contextMenu idMso="ContextMenuList">
            <menuSeparator id="ToolboxList"/>
            <button id="mnuFixQuantityList" label="Fix Quantity" onAction="FixSingleQuantity" getEnabled="IsUnit" />
			<toggleButton id="mnuTogglePgBrkList" label="Toggle Page Break" getPressed="GetPageBreakBefore" onAction="TogglePageBreakBefore" />
		</contextMenu>
		<contextMenu idMso="ContextMenuTableCell">
			<menuSeparator id="ToolboxTableCell"/>
			<button id="mnuFixQuantityTableCell" label="Fix Quantity" onAction="FixSingleQuantity" getEnabled="IsUnit" />
		</contextMenu>
		<contextMenu idMso="ContextMenuTextTable">
			<menuSeparator id="ToolboxTextTable"/>
			<button id="mnuFixQuantityTextTable" label="Fix Quantity" onAction="FixSingleQuantity" getEnabled="IsUnit" />
			<toggleButton id="mnuTogglePgBrkTextTable" label="Toggle Page Break" getPressed="GetPageBreakBefore" onAction="TogglePageBreakBefore" />
		</contextMenu>
	</contextMenus>
</customUI>